<h1>Edit password</h1>
<% form_for(@user, url(:passwords, :update, id: @user.id), method: :post) do |f| %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br/>
  <%= f.submit "Update", :class => "btn btn-primary" %>
<% end %>